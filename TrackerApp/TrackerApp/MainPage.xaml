<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TrackerApp"
             x:Class="TrackerApp.MainPage">

    <StackLayout>
        <Button Text="Start tracking" Command="{Binding StartTrackingCommand}" />
        <Button Text="Stop tracking" Command="{Binding StopTrackingCommand}" />
        <TableView Intent="Form" BindingContext="{Binding MainPageViewModel}">
            <TableRoot>
                <TableSection Title="Coordinates">
                    <TextCell Text="{Binding Latitude}"/>
                    <TextCell Text="{Binding Longitude}"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>