<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TrackerApp"
             x:Class="TrackerApp.MainPage">

    <StackLayout>
        <Button Text="Start tracking" Clicked="Button_StartTracking"></Button>
        <Button Text="Stop tracking" Clicked="Button_StopTracking"></Button>
        <TableView Intent="Data">
            <TableRoot>
                <TableSection Title="Coordinates">
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Latitude}"/>
                            <Label Text="{Binding Longitude}"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <!--<ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Latitude}"></Label>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>-->
            </TableRoot>
        </TableView>
    </StackLayout>

</ContentPage>
